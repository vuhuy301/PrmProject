<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Toolbar với tiêu đề và nút back -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/colorPrimary"
        android:titleTextColor="#FFFFFF"
        android:title="Chi tiết đơn hàng"/>

    <!-- Mã đơn hàng -->
    <TextView
        android:id="@+id/orderId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mã đơn hàng: #12345"
        android:textSize="18sp"
        android:layout_marginTop="16dp"/>

    <!-- Tên khách hàng -->
    <TextView
        android:id="@+id/customerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Khách hàng: Nguyễn Văn A"
        android:textSize="16sp"
        android:layout_marginTop="8dp"/>

    <!-- Ngày đặt hàng -->
    <TextView
        android:id="@+id/orderDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ngày đặt hàng: 01/01/2024"
        android:textSize="16sp"
        android:layout_marginTop="8dp"/>

    <!-- Trạng thái đơn hàng với biểu tượng chỉnh sửa -->
    <LinearLayout
        android:layout_width="185dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/orderStatus"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Trạng thái: Đã giao"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="21dp"
            android:layout_weight="1"
            app:srcCompat="@android:drawable/ic_menu_edit" />


    </LinearLayout>

    <!-- Danh sách sản phẩm trong đơn hàng -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/productsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp" />
</LinearLayout>
